                <field name="perm_delete" eval="True"/>
            </record>
            <!-- access rule group -->
            <record model="ir.rule.group" id="direc_rule_group_akademy_company_student">
                <field name="name">Discente</field>
                <field name="model" 
                    search="[('model', '=', 'company.student')]"/>
