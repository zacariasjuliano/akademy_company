        <!-- Acesso ao menu PARTY -->

        <!-- start student -->
            <record model="ir.model.access" id="direc_access_akademy_company_student">
                <field name="model" search="[('model', '=', 'company.student')]"/>
                <field name="group" ref="akademy_classe.group_akademy_direc"/>
