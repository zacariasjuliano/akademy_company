<!-- GRUPO DE PERMIÇÕES PARA USUÁRIOS DISCENTES -->
<tryton>
    <data>
        <!-- Acesso ao menu Student -->
        <record model="ir.ui.menu-res.group" 
            id="akademy_company_student-group_akademy_student">
            <field name="menu" ref="akademy_company_student"/>
            <field name="group" ref="akademy_party.group_akademy_student"/>
        </record>

        <!-- Definição de Regras de Acesso aos Modelos -->
        <!-- Modelo STUDENT -->
        <record model="ir.model.access" 
            id="access_akademy_students-group_akademy_student">
            <field name="model" search="[('model', '=', 'company.student')]"/>
            <field name="group" ref="akademy_party.group_akademy_student"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" 
            id="rule_group_akademy_students-group_akademy_student">
            <field name="name">Discentes</field>
            <field name="model" 
                search="[('model', '=', 'company.student')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!--
        <record model="ir.rule" id="rule_group_akademy_students_line1">
            <field name="domain" pyson="1" 
                eval="[('company', '=', Eval('user', {}).get('company', None))]" />
            <field name="rule_group" ref="rule_group_akademy_students-group_akademy_student"/>
        </record>
        -->
        <record model="ir.rule.group-res.group" 
            id="res_group_akademy_students-group_akademy_student">
            <field name="rule_group" ref="rule_group_akademy_students-group_akademy_student"/>
            <field name="group" ref="akademy_party.group_akademy_student"/>
        </record>

        <!-- Definição de Regras de Acesso aos Modelos -->
        <!-- Modelo STUDENT SUPERVISOR --> 
        <record model="ir.model.access" 
            id="access_akademy_student_supervisors-group_akademy_student">
            <field name="model" search="[('model', '=', 'company.student.supervisor')]"/>
            <field name="group" ref="akademy_party.group_akademy_student"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!-- access rule group -->
        <record model="ir.rule.group" 
            id="rule_group_akademy_student_supervisors-group_akademy_student">
            <field name="name">Encarregado de Educação</field>
            <field name="model" 
                search="[('model', '=', 'company.student.supervisor')]"/>
            <field name="global_p" eval="False"/>
            <field name="default_p" eval="False"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <!--
        <record model="ir.rule" id="rule_group_akademy_student_supervisors_line1">
            <field name="domain" pyson="1" 
                eval="[('company', '=', Eval('user', {}).get('company', None))]" />
            <field name="rule_group" ref="rule_group_akademy_student_supervisors-group_akademy_student"/>
        </record>
        -->
        <record model="ir.rule.group-res.group" 
            id="res_group_akademy_student_supervisors-group_akademy_student">
            <field name="rule_group" ref="rule_group_akademy_student_supervisors-group_akademy_student"/>
            <field name="group" ref="akademy_party.group_akademy_student"/>
        </record>
        
    </data>
</tryton>